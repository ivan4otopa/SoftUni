@using Snippy.App.Models
@model CommentViewModel

<div class="comment">
    <div class="content">@Model.Content</div>

    <div class="author"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <b>@Model.Author</b> on <span class="date">@Model.CreationTime</span></div>

    <div class="comment-snippet">on @Html.ActionLink(Model.Snippet.Title, "Details", "Snippets", new { id = Model.Snippet.Id }, null)</div>
</div>