		<?php
		if(isset($_GET['text'])):
			$text = $_GET['text'];
			$text = trim($text);
			$replacePattern = '/[!.\/]/';
			$text = preg_replace($replacePattern, '', $text);
			echo $text;
			$pattern = '/[a-zA-Z]+\s+/';
			$words = array();
			preg_match_all($pattern, $text, $words);
			var_dump($words);
